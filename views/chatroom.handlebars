   <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; height: 6vh;}
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
      #messages { margin-bottom: 40px }
      .conversation {font-size: 20px}
      #breaker{height:6vh; position:absolute}
    </style>

    <button id ="invitation"> Invite other to group </button>


    <h3>{{#if success_msg}}
        <div class="alert alert-success">{{success_msg}}</div>
        {{/if}}
        {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
        {{/if}}
        {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
        {{/if}}
    </h3>

    <div class='conversation'>
     {{#each chatrecord}}
    <a class='user{{this.userid}}'> {{this.record}} </a><br>
    {{/each}}
    <a id='breaker'></a>
    </div>

    <form action="">
    <input id="m" autocomplete="off" required/><button>Send</button>
    </form>
  

    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
    <script>
      $('.user{{userid}}').css('float', 'right')
      $(function () {
        var socket = "";
        socket = io(window.location.origin, { query: 'data={{userid}},{{groupid}}' })

        socket.emit('subscribe', {{ groupid }});

      $('form').submit(function () {
        socket.emit('chat message', $('#m').val());
        $('#m').val('');
        return false;
      });

      socket.on('chat message', function (msg, user) {
        console.log(msg);
        $('#breaker').before($('<a>').text(msg).addClass('user' + user).add('<br>'));
        $('.user{{userid}}').css('float', 'right')
        window.scrollTo(0, document.body.scrollHeight);
      });
    
        $('#invitation').click(function(){
        var invitationName = prompt('Please enter a username.');
        var invitedgroup = {{groupid}};
        window.location.href = "/group/invite/" + invitationName +"&" + {{groupid}}; 
        })

        });



    </script>